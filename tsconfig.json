{
  "compilerOptions": {
    "target": "ES2023",                                  
    "module": "commonjs",
    "moduleResolution": "node",                                
    // "rootDir": "./src",
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                 
    // "paths": {
    //   "@/*": ["./src/*"],
    //   "@root/*": ["./*"]

    // }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts"
],
  "exclude": ["node_modules"],
}
